{
	"name": "webconnect",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"biome:check": "biome check .",
		"biome:fix": "biome check --write .",
		"test": "bun test",
		"deploy": "bun run build && wrangler pages deploy .svelte-kit/cloudflare",
		"deploy:staging": "bun run build && wrangler pages deploy .svelte-kit/cloudflare --env staging",
		"pages:dev": "wrangler pages dev .svelte-kit/cloudflare"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.43.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@types/bun": "^1.3.0",
		"@types/three": "^0.180.0",
		"@types/w3c-web-serial": "^1.0.8",
		"svelte": "^5.39.5",
		"svelte-check": "^4.3.2",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
		"wrangler": "^4.43.0"
	},
	"dependencies": {
		"carbon-components-svelte": "^0.89.7",
		"carbon-icons-svelte": "^13.6.0",
		"three": "^0.180.0",
		"three-stdlib": "^2.36.0",
		"urdf-loader": "^0.12.6"
	}
}
